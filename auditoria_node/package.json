{
    "name": "auditoria-service",
    "version": "0.1.0",
    "description": "Server de Auditoria",
    "repository": {
        "type": "git",
        "url": "https://github.com/nmarsollier/2018_microservicios.git"
    },
    "author": "Rodrigo Sobisch",
    "license": "MIT",
    "scripts": {
        "start": "npm run build && npm run watch",
        "build": "npm run build-ts && npm run tslint && npm run apidoc && npm run apidocmd",
        "serve": "node dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"nodemon dist/server.js\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "apidoc": "./node_modules/.bin/apidoc -i src -o ./dist/public",
        "apidocmd": "./node_modules/.bin/apidoc-markdown2 -p ./dist/public -o README-API.md",
        "test": "jest --coverage --verbose"
    },
    "dependencies": {
        "amqplib": "0.5.2",
        "body-parser": "1.18.3",
        "compression": "1.7.2",
        "connect-mongo": "2.0.1",
        "cors": "2.8.4",
        "dotenv": "5.0.1",
        "escape-html": "1.0.3",
        "express": "4.16.3",
        "helmet": "3.12.1",
        "jsonwebtoken": "8.3.0",
        "mongoose": "5.1.2",
        "morgan": "^1.9.1",
        "node-cache": "4.2.0",
        "passport": "0.4.0",
        "passport-jwt": "4.0.0",
        "typed-rest-client": "1.0.7",
        "winston": "2.4.2"
    },
    "devDependencies": {
        "@types/amqplib": "0.5.7",
        "@types/body-parser": "1.17.0",
        "@types/compression": "0.0.36",
        "@types/connect-mongo": "0.0.35",
        "@types/cors": "2.8.4",
        "@types/dotenv": "4.0.3",
        "@types/escape-html": "0.0.20",
        "@types/express": "4.16.0",
        "@types/helmet": "0.0.37",
        "@types/jest": "23.1.3",
        "@types/jsonwebtoken": "7.2.7",
        "@types/mongodb": "3.1.0",
        "@types/mongoose": "5.0.18",
        "@types/morgan": "1.7.35",
        "@types/node": "8.9.4",
        "@types/node-cache": "4.1.1",
        "@types/passport": "0.4.5",
        "@types/passport-jwt": "3.0.1",
        "@types/winston": "2.3.9",
        "apidoc": "^0.17.6",
        "apidoc-markdown2": "^0.3.6",
        "chai": "4.1.2",
        "concurrently": "3.6.0",
        "jest": "23.2.0",
        "mockingoose": "2.10.1",
        "node-mocks-http": "1.7.0",
        "nodemon": "1.17.5",
        "ts-jest": "23.0.0",
        "tslint": "5.10.0",
        "typescript": "2.9.2"
    }
}
